{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "linter": {
    "rules": {
      "style": {
        "noMagicNumbers": "off",
        "useNodejsImportProtocol": "off"
      },
      "correctness": {
        "useUniqueElementIds": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "trailingCommas": "es5"
    }
  },
  "files": {
    "includes": [
      "**",
      "!**/*.css",
      "!node_modules",
      "!convex/_generated",
      "!dist",
      "!build",
      "!.vscode",
      "!.turbo",
      "!.next",
      "!.cursor",
      "!.env"
    ]
  }
}
